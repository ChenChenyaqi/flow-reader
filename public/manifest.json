{
  "manifest_version": 3,
  "name": "FluentLens",
  "version": "1.0.0",
  "description": "Turn Passive Reading into Active Fluency - A Chrome extension for English learning",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background/main.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/main.ts"
      ]
    }
  ],
  "options_page": "src/options/index.html",
  "action": {
    "default_popup": "src/options/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/dashboard/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
